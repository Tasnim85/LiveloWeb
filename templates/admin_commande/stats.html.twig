<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order Statistics</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
        rel="stylesheet"
    >
    <style>
        .chart-container {
            position: relative;
            height: 300px;
        }
        .layout-wrapper {
            display: flex;
            min-height: 100vh;
        }
        .layout-menu {
            width: 250px;
        }
        .layout-content-navbar {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        .layout-container {
            display: flex;
        }
        .layout-page {
            flex: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Sidebar -->
        <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme p-3">
            <a href="{{ path('app_homeAdmin') }}">
                <div class="app-brand justify-content-center mb-4">
                    <img src="{{ asset('bo/logo_final-removebg-preview.png') }}" alt="Logo" style="max-width: 150px;">
                </div>
            </a>
            <ul class="menu-inner list-unstyled">
                <li class="menu-item">
                    <a href="javascript:void(0);" class="menu-link d-flex align-items-center">
                        <img src="{{ asset('bo/assets/img/icons/user(1).png') }}" width="28" height="28" />
                        <span class="ms-2">Users</span>
                    </a>
                    <ul class="menu-sub">
                        <li><a href="{{ path('app_not_verified_users') }}">Pending users</a></li>
                        <li><a href="#">All users</a></li>
                    </ul>
                </li>
                <li class="menu-item">
                    <a href="#" class="menu-link d-flex align-items-center">
                        <img src="{{ asset('bo/assets/img/icons/menu.png') }}" width="28" height="28" />
                        <span class="ms-2">Categories</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="#" class="menu-link d-flex align-items-center">
                        <img src="{{ asset('bo/assets/img/icons/radar.png') }}" width="28" height="28" />
                        <span class="ms-2">Coverage areas</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="#" class="menu-link d-flex align-items-center">
                        <img src="{{ asset('bo/assets/img/icons/helmet-removebg-preview.png') }}" width="28" height="28" />
                        <span class="ms-2">Riders performance</span>
                    </a>
                </li>
                <li class="menu-item active">
                    <a href="{{ path('app_admin_commande') }}" class="menu-link d-flex align-items-center">
                        <img src="{{ asset('bo/assets/img/icons/shopping-cart.png') }}" width="28" height="28" />
                        <span class="ms-2">Orders report</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <div class="layout-page">
            <h1 class="my-4">Order Statistics</h1>

            <div class="row">
                <!-- Top Users -->
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5>Top Users by Orders</h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="topUsersChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orders by Status -->
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-success text-white">
                            <h5>Orders by Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="statusChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders Table -->
            <div class="row">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5>Recent Orders</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>User</th>
                                            <th>First Address</th>
                                            <th>Second Address</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for row in recent_orders %}
                                            {% set order = row[0] %}
                                            <tr>
                                                <td>{{ order.idCommande}}</td>
                                                <td>{{ row.username }}</td>
                                                <td>{{ order.adresseDep }}</td>
                                                <td>{{ order.adresseArr }}</td>
                                                <td>{{ order.horaire|date('Y-m-d H:i') }}</td>
                                                <td>
                                                    <span class="badge 
                                                        {% if order.statut == 'Processing' %}bg-warning
                                                        {% elseif order.statut == 'Completed' %}bg-success
                                                        {% else %}bg-secondary{% endif %}">
                                                        {{ order.statut }}
                                                    </span>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- /.layout-page -->
    </div>
</div>

<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Top Users Chart
    const topUsersCtx = document.getElementById('topUsersChart').getContext('2d');
    new Chart(topUsersCtx, {
        type: 'bar',
        data: {
            labels: {{ top_users|map(u => u.username)|json_encode|raw }},
            datasets: [{
                label: 'Number of Orders',
                data: {{ top_users|map(u => u.orderCount)|json_encode|raw }},
                backgroundColor: [
                    'rgba(54, 162, 235, 0.7)',
                    'rgba(255, 99, 132, 0.7)',
                    'rgba(75, 192, 192, 0.7)',
                    'rgba(255, 206, 86, 0.7)',
                    'rgba(153, 102, 255, 0.7)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: { beginAtZero: true }
            }
        }
    });

    // Status Chart
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: {{ status_stats|map(s => s.status)|json_encode|raw }},
            datasets: [{
                data: {{ status_stats|map(s => s.count)|json_encode|raw }},
                backgroundColor: [
                    'rgba(255, 99, 132, 0.7)',
                    'rgba(54, 162, 235, 0.7)',
                    'rgba(255, 206, 86, 0.7)'
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'right' }
            }
        }
    });
</script>
</body>
</html>
