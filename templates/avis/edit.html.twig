{% extends 'home/homeClient.html.twig' %}

{% block title %}Modifier un Avis{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h3 class="mb-0 text-center text-white">✏️ Update your feedback</h3>
                </div>
                <div class="card-body p-4">

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {{ form_errors(form) }}

                    <div class="form-group mb-4">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Votre avis...'}}) }}
                        {{ form_errors(form.description, {'attr': {'class': 'form-error'}}) }}
                        {# {% if form_errors(form.description) %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %} #}
                    </div>

                    {# Rendre les autres champs cachés #}
                    <div style="display: none;">
                        {{ form_row(form.created_by) }}
                        {{ form_row(form.livraisonId) }}
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a href="{{ path('app_avis_index') }}" class="btn btn-outline-secondary">
                            ⬅️ Retour à la liste
                        </a>

                        <button type="submit" class="btn btn-success px-4">
                            ✅ {{ button_label|default('Enregistrer') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>


        </div>
    </div>
</div>
{% endblock %}
