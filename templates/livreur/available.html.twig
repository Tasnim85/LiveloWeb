{% extends 'livreur/base_livreur.html.twig' %}

{% block livreur_content %}
    <div class="card">
        <div class="card-header">
            <h3>Available Deliveries</h3>
        </div>
        <div class="card-body">
            {% if deliveries is empty %}
                <p class="text-center">No available deliveries at the moment</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for delivery in deliveries %}
                                <tr>
                                    <td>#{{ delivery.commandeId.idCommande }}</td>
                                    <td>{{ delivery.commandeId.adresse_dep }}</td>
                                    <td>{{ delivery.commandeId.adresse_arr }}</td>
                                    <td>
                                        <a href="{{ path('app_livreur_accept', {'id': delivery.idLivraison}) }}" 
                                           class="btn btn-success btn-sm">Accept Delivery</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
