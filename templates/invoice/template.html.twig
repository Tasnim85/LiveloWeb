{# templates/invoice/template.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Invoice {{ invoice_number }}</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            color: #333;
            background-color: #fff;
        }
        .header {
            text-align: center;
            margin-bottom: 40px;
        }
        .header h1 {
            color: #28a745;
            font-size: 36px;
            margin-bottom: 5px;
        }
        .header p {
            font-size: 14px;
            color: #666;
        }
        .address {
            margin-bottom: 40px;
            padding: 20px;
            border: 1px solid #28a745;
            border-radius: 8px;
            background: #f9fff9;
        }
        .address h3 {
            margin-bottom: 15px;
            color: #28a745;
        }
        .address p {
            margin: 5px 0;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }
        table thead {
            background-color: #28a745;
            color: #fff;
        }
        table th, table td {
            border: 1px solid #ddd;
            padding: 12px;
            font-size: 14px;
        }
        table td {
            background-color: #f9f9f9;
        }
        .text-right {
            text-align: right;
        }
        .total {
            font-weight: bold;
            font-size: 18px;
            color: #28a745;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="header">
        <h1>LiVelo</h1>
        <p>Date: {{ date|date('Y-m-d H:i') }}</p>
    </div>

    <div class="address">
        <h3>Delivery Details:</h3>
        <p><strong>First Address:</strong> {{ commande.adresseDep }}</p>
        <p><strong>Second Address:</strong> {{ commande.adresseArr }}</p>
        <p><strong>Type:</strong> {{ commande.typeLivraison }}</p>
    </div>

    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Unit Price</th>
                <th>Qty</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>{{ item.price|number_format(2) }} TND</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.total|number_format(2) }} TND</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-right total">
        GRAND TOTAL: {{ total|number_format(2) }} TND
    </div>

</body>
</html>
