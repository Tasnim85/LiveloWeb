{% block body %}
<form id="formAuthentication" class="mb-3" action="{{ path('user_register') }}" method="POST">
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="mb-3">
                <label for="prenom" class="form-label">First name</label>
                <input type="text" class="form-control" id="prenom" name="prenom" placeholder="Enter your first name" value="{{ data.prenom ?? '' }}" autofocus />
            </div>
            <div class="mb-3">
                <label for="cin" class="form-label">CIN</label>
                <input type="text" class="form-control" id="cin" name="cin" placeholder="Enter your CIN" value="{{ data.cin ?? '' }}" />
            </div>
            <div class="mb-3">
                <label for="adresse" class="form-label">Address</label>
                <input type="text" class="form-control" id="adresse" name="adresse" placeholder="Enter your address" value="{{ data.adresse ?? '' }}" />
            </div>
            <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select class="form-control" id="role" name="role">
                    <option value="">Choose a role</option>
                    <option value="client" {{ data.role is defined and data.role == 'client' ? 'selected' : '' }}>Client</option>
                    <option value="delivery_person" {{ data.role is defined and data.role == 'delivery_person' ? 'selected' : '' }}>Delivery Person</option>
                    <option value="partner" {{ data.role is defined and data.role == 'partner' ? 'selected' : '' }}>Partner</option>
                </select>
            </div>
            <div class="mb-3" id="vehicleTypeContainer" style="display: none;">
                <label for="type_vehicule" class="form-label">Vehicle Type</label>
                <select class="form-control" id="type_vehicule" name="type_vehicule">
                    <option value="">Select vehicle type</option>
                    <option value="Bike" {{ (data.type_vehicule ?? '') == 'Bike' ? 'selected' : '' }}>Bike</option>
                    <option value="e_bike" {{ (data.type_vehicule ?? '') == 'e_bike' ? 'selected' : '' }}>E-Bike</option>
                    <option value="e_scooter" {{ (data.type_vehicule ?? '') == 'e_scooter' ? 'selected' : '' }}>E-Scooter</option>
                </select>
            </div>
            <div class="mb-3 form-password-toggle">
                <label class="form-label" for="password">Password</label>
                <div class="input-group input-group-merge">
                    <input type="password" id="password" class="form-control" name="password" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" />
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
            </div>
            
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
            <div class="mb-3">
                <label for="nom" class="form-label">Last name</label>
                <input type="text" class="form-control" id="nom" name="nom" placeholder="Enter your last name" value="{{ data.nom ?? '' }}" />
            </div>
            <div class="mb-3">
                <label for="num_tel" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="num_tel" name="num_tel" placeholder="Enter your phone number" value="{{ data.num_tel ?? '' }}" />
            </div>
            <div class="mb-3">
                <label for="url_image" class="form-label">Photo URL</label>
                <input type="text" class="form-control" id="url_image" name="url_image" placeholder="Enter photo URL" value="{{ data.url_image ?? '' }}" />
            </div>
            
          <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value="{{ data.email ?? '' }}" />
          </div>
          <div class="mb-3 form-password-toggle">
          <label class="form-label" for="confirm_password">Confirm Password</label>
          <div class="input-group input-group-merge">
              <input type="password" id="confirm_password" class="form-control" name="confirm_password" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" />
