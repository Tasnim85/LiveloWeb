{% for message in app.flashes('success') %}
<script>
    Swal.fire({
        title: 'Success!',
        text: '{{ message }}',
        icon: 'success',
        confirmButtonText: 'OK'
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = "{{ path('app_login') }}";
        }
    });
</script>
{% endfor %}



<script>
    document.addEventListener("DOMContentLoaded", function () {
        const roleSelect = document.getElementById("role");
        const vehicleContainer = document.getElementById("vehicleTypeContainer");

        function toggleVehicleType() {
            if (roleSelect.value === "delivery_person") {
                vehicleContainer.style.display = "block";
            } else {
                vehicleContainer.style.display = "none";
            }
        }

        toggleVehicleType();
        roleSelect.addEventListener("change", toggleVehicleType);
    });
</script>
