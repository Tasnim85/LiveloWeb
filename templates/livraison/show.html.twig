{% extends 'home/homeAdmin.html.twig' %}

{% block title %}Détails de la Livraison{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-white">🚚 Livraison N° {{ livraison.idLivraison }}</h4>
            <a href="{{ path('app_livraison_index') }}" class="btn btn-light btn-sm">← Retour à la liste</a>
        </div>

        <div class="card-body p-2">
            <table class="table table-bordered ">
                <tbody>
                    <tr>
                        <th scope="row">📅 Date de création</th>
                        <td>{{ livraison.createdAt ? livraison.createdAt|date('Y-m-d') : 'Non spécifiée' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">📦 État de la commande</th>
                        <td>{{ command.statut }}</td>
                    </tr>
                    <tr>
                        <th scope="row">👤 Nom du client</th>
                        <td>{{ client.prenom }} {{ client.nom }} </td>
                        <td>📞 {{ client.num_tel }}</td>
                    </tr>
                    <tr>
                        <th scope="row">🚴 Livreur assigné</th>
                        <td>{{ livreur.nom }} {{ livreur.prenom }}</td>
                        <td>📞 {{ livreur.num_tel }}</td>
                    </tr>

                    <tr>
                        <th scope="row">📝 description</th>
                        {% if avis.description is defined %}
                        <td>{{ avis.description ? avis.description : 'Non spécifiée' }}</td>
                        {% else %}
                        <td>Not specified yet</td>
                        {% endif %}
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            <a href="{{ path('app_livraison_edit', {'idLivraison': livraison.idLivraison}) }}" class="btn btn-warning">
                ✏️ Modifier
            </a>

            {# <form method="post" action="{{ path('app_livraison_delete', {'idLivraison': livraison.idLivraison}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <button class="btn btn-danger">🗑️ Delete</button>
            </form> #}
            {# <a href="{{ path('app_livraison_delete', {'idLivraison': livraison.idLivraison}) }}" class="btn btn-danger">
                🗑️ Supprimer
            </a> #}
        </div>
    </div>
</div>
{% endblock %}
