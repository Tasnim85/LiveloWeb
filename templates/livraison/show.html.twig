{% extends 'home/homeAdmin.html.twig' %}

{% block title %}Delivery Details{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-white">🚚 Delivery N° {{ livraison.idLivraison }}</h4>
            <a href="{{ path('app_livraison_index') }}" class="btn btn-light btn-sm">← Back to list</a>
        </div>

        <div class="card-body p-2">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">📅 Creation Date</th>
                        <td>{{ livraison.createdAt ? livraison.createdAt|date('Y-m-d') : 'Not specified' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">📦 Order Status</th>
                        <td>{{ command.statut }}</td>
                    </tr>
                    <tr>
                        <th scope="row">👤 Customer Name</th>
                        <td>{{ client.prenom }} {{ client.nom }}</td>
                        <td>📞 {{ client.getNumTel }}</td>
                    </tr>
                    <tr>
                        <th scope="row">🚴 Assigned Delivery Person</th>
                        <td>{{ livreur.nom }} {{ livreur.prenom }}</td>
                        <td>📞 {{ livreur.getNumTel }}</td>
                    </tr>
                    {# <tr>
                        <th scope="row">🛒 Product Description</th>
                        <td>{{ articleCommande.idArticle.description }}</td>
                    </tr> #}
                    <tr>
                        <th scope="row">📝 Feedback</th>
                        {% if avis.description is defined %}
                            <td>{{ avis.description ? avis.description : 'Not specified' }}</td>
                        {% else %}
                            <td>Not specified yet</td>
                        {% endif %}
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            <a href="{{ path('app_livraison_edit', {'idLivraison': livraison.idLivraison}) }}" class="btn btn-warning">
                ✏️ Edit
            </a>

            {# 
            <form method="post" action="{{ path('app_livraison_delete', {'idLivraison': livraison.idLivraison}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <button class="btn btn-danger">🗑️ Delete</button>
            </form> 
            #}

            {# 
            <a href="{{ path('app_livraison_delete', {'idLivraison': livraison.idLivraison}) }}" class="btn btn-danger">
                🗑️ Delete
            </a> 
            #}
        </div>
    </div>
</div>
{% endblock %}
