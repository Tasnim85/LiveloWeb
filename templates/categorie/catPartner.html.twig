{% block javascripts %}
    
    <script>
        // Vérification périodique des alertes de stock
       setInterval(() => {
    fetch('{{ path('partner_api_alerts') }}')
        .then(response => response.json())
        .then(data => {
            let alertDiv = document.getElementById('stockAlert');

            if (data.hasAlerts) {
                if (!alertDiv) {
                    const newAlert = document.createElement('div');
                    newAlert.id = 'stockAlert';
                    newAlert.className = 'alert alert-danger stock-alert';
                    newAlert.style.cursor = 'pointer'; // ✅ Ajoute un curseur "main" au survol
                    newAlert.innerHTML = `
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>ALERTE STOCK!</strong>
                        <span id="alertCount">${data.count}</span> article(s) sous le seuil critique!
                    `;

                    // ✅ Quand on clique, on montre la liste des articles
                    newAlert.addEventListener('click', () => {
                        let articleList = data.articles.map(article => `<li>${article}</li>`).join('');
                        let alertMessage = `
                            <ul>${articleList}</ul>
                        `;
                        // Petite pop-up native
                        Swal.fire({
                            title: 'Articles en alerte',
                            html: alertMessage,
                            icon: 'warning',
                            confirmButtonText: 'OK'
                        });
                    });

                    document.body.appendChild(newAlert);
                } else {
                    document.getElementById('alertCount').textContent = data.count;
                }
            } else if (alertDiv) {
                alertDiv.remove();
            }
        });
}, 30000);

 
    </script>
    
    
